{
  "name": "ghostty-opentui",
  "version": "1.3.0",
  "description": "Fast ANSI/VT terminal parser powered by Ghostty's Zig terminal emulation library",
  "main": "./dist/ffi.js",
  "types": "./dist/ffi.d.ts",
  "exports": {
    ".": {
      "require": "./dist/ffi.js",
      "types": "./dist/ffi.d.ts"
    },
    "./terminal-buffer": {
      "require": "./dist/terminal-buffer.js",
      "types": "./dist/terminal-buffer.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "zig-out/lib/ghostty-opentui.node"
  ],
  "scripts": {
    "dev": "bun --watch run tui/index.tsx",
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "bun run build",
    "test": "bun test"
  },
  "keywords": ["terminal", "pty", "vt100", "ansi", "ghostty", "opentui", "napi"],
  "author": "remorses",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/remorses/ghostty-opentui"
  },
  "peerDependencies": {
    "@opentui/core": "*"
  },
  "peerDependenciesMeta": {
    "@opentui/core": {
      "optional": true
    }
  },
  "devDependencies": {
    "@opentui/core": "^0.1.50",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "bun-types": "^1.3.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "strip-ansi": "^7.1.2"
  }
}
